{% extends "templates/layout.jinja2" %}
{% block body %}
<form method="POST">

<h2><font color="#ff0000"><i>Adding a New Journal Entry</i></font></h2>
<hr />

{% for field in form %}
  {% if field.errors %}
    <ul>
    {% for error in field.errors %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
  {% endif %}
    <p><i>{{ field.label }}: </i>{{ field }}</p>
{% endfor %}

    <hr />
    <table border="0">
      <tr valign="top">
         <td width="40%"><p><input type="submit" name="submit" value="Submit" /></p></td>
         <td width="60%"><p align="center"><img src="../static/pen.png" alt="Pen Image" width="100" height="100" /></p></td>
      </tr>
    </table>
</form>
{% endblock %}
